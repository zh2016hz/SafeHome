<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xn069392.safehome.activity.ProtectPhoneActivity1">

    <TextView
        style="@style/TitleBarStyleTop"
        android:text="2/手机卡绑定"/>

    <TextView
        style="@style/TextStyleBig"
        android:text="通过绑定SIM卡\n 下次如果重启手机回去检测SIM卡是否变化辩护就报警"/>

    <Button
        android:id="@+id/bind_SIM_card"
        style="@style/BaseButton"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:text="点击绑定/解绑SIM卡"

        android:textColor="#fff"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/step_2"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pro_button"
            style="@style/ProButton"
            android:text="上一步"/>

        <Button
            android:id="@+id/next_button"
            style="@style/NextButtom"
            android:text="下一步"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                style="@style/StyleDot"/>

            <View
                style="@style/StyleDotCurrent"/>

            <View
                style="@style/StyleDot"/>

            <View
                style="@style/StyleDot"/>

            <View
                style="@style/StyleDot"/>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
