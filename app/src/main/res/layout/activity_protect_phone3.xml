<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xn069392.safehome.activity.ProtectPhoneActivity1">

    <TextView
        style="@style/TitleBarStyleTop"
        android:text="3/设置安全号码"/>

    <TextView
        style="@style/TextStyleBig"
        android:text="SIM卡如果变化\n 报警短信就会发送到安全号码"/>

    <EditText
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/bind_SIM_card_btn"
        style="@style/BaseButton"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:text="请选择安全号码"

        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/step_3"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pro_button"
            style="@style/ProButton"
            android:text="上一步"/>

        <Button
            android:id="@+id/next_button"
            style="@style/NextButtom"
            android:text="下一步"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                style="@style/StyleDot"/>

            <View
                style="@style/StyleDot"/>
            <View
                style="@style/StyleDotCurrent"/>

            <View
                style="@style/StyleDot"/>

            <View
                style="@style/StyleDot"/>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

