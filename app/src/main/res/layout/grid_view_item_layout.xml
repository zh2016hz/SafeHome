<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/main_item_selector"
              android:orientation="horizontal"
              android:padding="10dp" >

    <ImageView
        android:id="@+id/item_main_grid_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sjfd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_main_grid_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机防盗"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_main_grid_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机防盗fdsfdsafsa"
            android:textColor="#949294" />
    </LinearLayout>

</LinearLayout>